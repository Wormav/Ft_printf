 {
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "exec",
			"type": "shell",
			"command": "cc",
			"args": [
				"-g",
				"-Werror",
				"-Wall",
				"-Wextra",
				"src/*.c",
				"&&",
				"./a.out"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": ["$gcc"],
		},
		{
			"label": "build",
			"type": "shell",
			"command": "cc",
			"args": [
				"-g",
				"-Werror",
				"-Wall",
				"-Wextra",
				"src/*.c",
			],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"problemMatcher": ["$gcc"],
		}
	],

}
